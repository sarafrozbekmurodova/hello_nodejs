<form action="edit_post" method="POST">
    <label>Title</label>
    <input type="text" name="title" value="<%= posts.title %>">
    <br>
    <label>Body</label>
    <input type="text" name="body" value="<%= posts.body %>">
    <br>
    <label>Author_id</label>
    <input type="number" name="author_id" value="<%= posts.author_id %>">
    <br>
    <input type="submit" value="edit">
</form>